<p id="notice"><%= notice %></p>

<h1>Cards</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cards.each do |card| %>
      <tr>
        <td><%= card.content %></td>
        <% if card.user.id == current_user.id %>
          <td><%= link_to 'Show', card %></td>
          <td><%= link_to 'Edit', edit_card_path(card) %></td>
          <td><%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        <td><%= card.user.name %>の投稿</td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p><%= link_to 'New Card', new_card_path %></p>
<p><%= link_to 'Idea mixer', ideas_path %></p>
